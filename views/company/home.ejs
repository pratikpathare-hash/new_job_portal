<%- include("navbar.ejs") %>
<!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Welcome,<%- result[0].company_name %></h3>
       <a href="/company/post_job"> <button class="btn btn-primary"><i class="bi bi-plus"></i> Post New Job</button></a>
      </div>


      <!-- Stats Cards -->
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div>
                <h6>Total Jobs</h6>
                <h3><%- jobs.length %></h3>
              </div>
              <i class="bi bi-briefcase-fill text-primary card-icon"></i>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div>
                <h6>Active Jobs</h6>
                <h3><%- count[0].active_jobs_count %></h3>
              </div>
              <i class="bi bi-check-circle-fill text-success card-icon"></i>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div>
                <h6>Total Applicants</h6>
                <h3><%- count[0].total_applications %></h3>
              </div>
              <i class="bi bi-people-fill text-warning card-icon"></i>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div>
                <h6>Shortlisted</h6>
                <h3><%- count[0].shortlisted_count %></h3>
              </div>
              <i class="bi bi-star-fill text-danger card-icon"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Job Posts -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">Recent Job Posts</h5>
        </div>
        <div class="card-body p-0">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Job Title</th>
                <th>Location</th>
                <th>Posted Date</th>
                <th>Status</th>
                <th>Applicants</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i= (jobs.length-1);i > (jobs.length-4);i--){ %>
              <tr>
                <td><%- jobs[i].job_title %></td>
                <td><%- result[0].location %></td>
                <td><%-  new Date(jobs[i].created_at).toISOString().split("T")[0]   %></td>
                <td><span class="badge <%- jobs[i].status=='Inactive'?'bg-warning':(jobs[i].status=='Closed'?'bg-danger':'bg-success') %>"><%- jobs[i].status %></span></td>
                <td><%- jobs[i].application_count %></td>
                <td><a href="/company/applications/<%- jobs[i].job_id %>"><button class="btn btn-sm btn-outline-primary">View</button></a></td>
              </tr>
              <% } %>
              
            </tbody>
          </table>
        </div>
      </div>

      <!-- Latest Applicants -->
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0">Latest Applicants</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <% for(var i=0 ; i<letest_application.length;i++){ %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%- letest_application[i].emp_name %> â€“ <%- letest_application[i].current_designation %>
              <span class="badge <%- letest_application[i].stage=='applied'?'bg-success':'bg-danger' %>"><%- letest_application[i].stage %></span>
            </li>
            <% } %>
            
          </ul>
        </div>
      </div>



      <%- include("footer.ejs") %>