<%- include("navbar.ejs") %>

<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Edit Company Profile</h5>
    </div>

    <div class="card-body">
      <form action="/company/save_profile" method="POST" enctype="multipart/form-data">

        <!-- Company Basic Info -->
        <h6 class="text-primary">Basic Information</h6>
        <hr>

        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Company Name</label>
            <input type="text" class="form-control" name="company_name" value="<%= company[0].company_name %>" required>
          </div>
          
          <div class="col-md-4">
            <label class="form-label">Website</label>
            <input type="url" class="form-control" name="website" value="<%= company[0].website_url %>">
          </div>
        
        </div>

        <div class="row mb-3">
           <div class="col-md-4">
              <label class="form-label">Hr Name:-</label>
              <input type="text" class="form-control" name="hr_name" value="<%- company[0].hr_name %>">
            </div>
          <div class="col-md-4">
            <label class="form-label">Hr Email</label>
            <input type="email" class="form-control" name="email" value="<%= company[0].hr_email %>" required>
          </div>

          <div class="col-md-4">
            <label class="form-label">Hr Mobile</label>
            <input type="text" class="form-control" name="mobile" value="<%= company[0].hr_mobile %>" required>
          </div>
           
            <div class="col-md-4 mt-3">
              <label class="form-label">Hr Designation:-</label>
              <input type="text" class="form-control" name="hr_designation" value="<%- company[0].hr_designation %>">
            </div>
           
        </div>

        

        <!-- Company Details -->
        <h6 class="text-primary mt-4">Company Details</h6>
        <hr>

        <div class="row mb-3">
          <div class="col-md-3">
            <label class="form-label">Industry</label>
            <input type="text" class="form-control" name="industry" value="<%= company[0].industry %>">
          </div>

         

          

          <div class="col-md-3">
            <label class="form-label">Company Type</label>
            <select class="form-select" name="company_type">
              <option>Startup</option>
              <option>Private Limited</option>
              <option>Public Limited</option>
              <option>MNC</option>
            </select>
          </div>
        </div>

        <!-- Address -->
        <h6 class="text-primary mt-4">Address</h6>
        <hr>

        <div class="mb-3">
          <label class="form-label">location</label>
          <input class="form-control" name="address" rows="2" value="<%= company[0].location %>" />
        </div>

       

        <!-- About -->
        <h6 class="text-primary mt-4">About Company</h6>
        <hr>

        <div class="mb-3">
          <textarea class="form-control" name="description" rows="4"><%= company[0].about_company %></textarea>
        </div>

        <!-- Buttons -->
        <div class="text-end">
          <button type="submit" class="btn btn-success">Update Profile</button>
          <a href="/" class="btn btn-secondary">Cancel</a>
        </div>

      </form>
    </div>
  </div>
</div>

<%- include("footer.ejs") %>