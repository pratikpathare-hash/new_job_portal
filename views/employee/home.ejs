<%- include("navbar.ejs") %>
<!-- RIGHT PANEL -->
<div class="col-md-9">
       <h1>Recomanded For You</h1><br>
<!-- Job Card 1 -->
<% for(var i=0;i<jobs.length;i++){ %>

<div class="card p-4 mb-3 job-card">
<div class="d-flex justify-content-between">
    <div>
        <h5 class="fw-bold"><%- jobs[i].job_title %></h5>
        <small class="text-muted"><%- jobs[i].company_name %></small>
    </div>
    <span class="badge badge-new">New</span>
</div>

<div class="job-tags mt-2">
    <span><i class="fa fa-location-dot"></i> <%- jobs[i].location %></span>
    <span><i class="fa fa-clock"></i> <%- jobs[i].job_type %></span>
    <span><%- jobs[i].skill_require %></span>
</div>

<p class="mt-3 text-muted"><%- jobs[i].details %></p>

<div class="d-flex justify-content-between align-items-center">
    <small class="text-muted"><%- jobs[i].created_at %></small>
    <div>
        <% if(jobs[i].saved_count==0){ %>
       <a href="/employee/saved_jobs/<%- jobs[i].job_id %>"> <button class="btn btn-outline-primary btn-sm">Save</button></a>
       <% }else{ %>
        <button class="btn btn-outline-success btn-sm " >Saved</button>
        <% } %>
        <% if(jobs[i].application_count==0){ %>
        <button onclick="apply_jobs('<%- jobs[i].job_id %>','<%- jobs[i].comp_id %>')" class="btn btn-apply btn-sm">Apply Now</button>
        <% }else { %>
        <button type="" disabled class="btn btn-primary">Applied</button>
            <% } %>
       
    </div>
</div>
</div>

<% } %>


<div class="text-center">
    <button class="btn btn-outline-primary">View All Recommended Jobs</button>
</div>

<!-- modal -->

<div class="modal" tabindex="-1" id="apply_job">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Apply For Job</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/employee/apply_job" method="post" enctype="multipart/form-data">
            <input type="number" hidden name="job_id" id="hid">
            <input type="number" hidden name="comp_id" id="comp_id">
            Upload Resume :- <br> <br>
            <input type="file" name="resume" class="form-control"><br>
     
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Apply Now</button>
      </div>
         </form>
    </div>
  </div>
</div>




<!-- modal -->

<div class="modal" tabindex="-1" id="upload_resume">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Profile Resume</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/employee/upload_resume" method="post" enctype="multipart/form-data">
            <input type="number" hidden name="job_id" id="hid">
            Upload Resume :- <br> <br>
            <input type="file" name="resume" class="form-control"><br>
     
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Apply Now</button>
      </div>
         </form>
    </div>
  </div>
</div>



</div>


<%- include("footer.ejs") %>