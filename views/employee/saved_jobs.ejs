<%- include("navbar.ejs") %>

<div class="col-md-9">
<h1>Saved Jobs :-</h1>

<% for(var i=0;i<saved_jobs.length;i++) { %>

       <!-- Job Card 1 -->

<div class="card p-4 mb-3 job-card">
<div class="d-flex justify-content-between">
    <div>
        <h5 class="fw-bold"><%- saved_jobs[i].job_title %></h5>
        <small class="text-muted"><%- saved_jobs[i].company_name %></small>
    </div>
    <span class="badge badge-new">New</span>
</div>

<div class="job-tags mt-2">
    <span><i class="fa fa-location-dot"></i> <%- saved_jobs[i].location %></span>
    <span><i class="fa fa-clock"></i> <%- saved_jobs[i].job_type %></span>
    <span><%- saved_jobs[i].skill_require %></span>
</div>

<p class="mt-3 text-muted"><%- saved_jobs[i].details %></p>

<div class="d-flex justify-content-between align-items-center">
    <small class="text-muted"><%- saved_jobs[i].created_at %></small>
    <div>
       <a href="/employee/unsave_jobs/<%- saved_jobs[i].job_id %>"> <button class="btn btn-outline-primary btn-sm">Unsave</button></a>
        <% if(jobs[i].application_count==0){ %>
        <button onclick="upload_resume('<%- saved_jobs[i].job_id %>','<%- saved_jobs[i].comp_id %>')" class="btn btn-apply btn-sm">Apply Now</button>
        <% }else { %>
        <button type="" disabled class="btn btn-primary">Applied</button>
            <% } %>
       
    </div>
</div>
</div>

<% } %>




<!-- modal -->

<div class="modal" tabindex="-1" id="apply_job">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Apply For Job</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/employee/apply_job" method="post" enctype="multipart/form-data">
            <input type="number" hidden name="job_id" id="hid">
            <input type="number" hidden name="comp_id" id="hid">
            Upload Resume :- <br> <br>
            <input type="file" name="resume" class="form-control"><br>
     
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Apply Now</button>
      </div>
         </form>
    </div>
  </div>
</div>

</div>
  
<%- include("footer.ejs") %>