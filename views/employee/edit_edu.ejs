<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Education Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Education Details</h5>
        </div>

        <div class="card-body">
          <form action="/employee/update_edu" method="post">
            <input type="text" name="edu_id" hidden value="<%- education[0].edu_id %>">

            <!-- Course Title -->
            <div class="mb-3">
              <label class="form-label">Course Title</label>
              <input type="text" name="title" class="form-control" placeholder="BCA, MCA, B.Tech" required value="<%- education[0].course_title %>">
            </div>

            <!-- University -->
            <div class="mb-3">
              <label class="form-label">University</label>
              <input type="text" name="univercity" class="form-control" placeholder="Savitribai Phule Pune University" required value="<%- education[0].univercity %>">
            </div>

            <!-- Passing Year -->
            <div class="mb-3">
              <label class="form-label">Passing Year</label>
              <select name="passing_year" class="form-select" required >
                <option value="">Select Year</option>
                <option <%- education[0].passing_year== '2025' ? 'selected' : '' %>>2025</option>
                <option <%- education[0].passing_year== '2024' ? 'selected' : '' %>>2024</option>
                <option <%- education[0].passing_year== '2023' ? 'selected' : '' %>>2023</option>
                <option <%- education[0].passing_year== '2022' ? 'selected' : '' %>>2022</option>
                <option <%- education[0].passing_year== '2021' ? 'selected' : '' %>>2021</option>
              </select>
            </div>

            <!-- Marks -->
            <div class="mb-3">
              <label class="form-label">Marks (%)</label>
              <input type="number" name="marks" class="form-control" placeholder="Enter percentage" min="0" max="100" required value="<%- education[0].marks %>">
            </div>

            <!-- Status -->
            <div class="mb-3">
              <label class="form-label">Status</label>
              <select name="status" class="form-select" required value="<%- education[0].status %>">
                <option value="">Select Status</option>
                <option value="completed" <%- education[0].status== 'completed' ? 'selected' : '' %>>Completed</option>
                <option value="appearing" <%- education[0].status== 'appearing' ? 'selected' : '' %>>Appearing</option>
              </select>
            </div>

            <!-- Submit -->
            <div class="d-grid">

              <button type="submit" class="btn btn-primary">
                Save Education
              </button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>

</body>
</html>
